<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>profile</title>
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="css/profileStyle.css" />
</head>
<body>
    <div class="container">
        <div class="row header">
            <a href="">logout</a>
            <a href=""><img src="<%=profilepic%>" id="profile_icon" style="height: 30px; width:30px;"></a>
            
        </div>

        <!-- navigation bar -->
        <div class="row navigation_bar mb-5 p-2">
            <nav><a href="">Home</a></nav>
            <!-- home is dashboard -->
        </div>

        <!-- personal info -->

        <div class="row personal_info align-items-start">
            <div class="col-sm-5 col-md-4 order-sm-last p-5">
                <img src="<%=profilepic%>" class="profile_image">
            </div>
            <div class="col-sm-7 col-md-8 order-sm-first" >
                <div class="row p-4"><h1><%=username%></h1></div>
                <ul class="personal_info_list">
                    <li>Name: <%=name%></li>
                    <li>Contact: <%=contactno%></li>
                    <li>Address: <%=address%></li>
                    <li>Last modified: <%=name%></li>
                </ul>
                <div class="row p-3 m-3 mt-5"><button class="btn btn-primary mt-5 " style="width: fit-content;" id="info_edit_button">Edit</button></div>
                
            </div>
        </div>

        <!-- edit personal info -->

        <div class="row personal_info_edit align-items-start">
            <div class="col-sm-5 col-md-4 order-sm-last p-5">
                <img src="<%=profilepic%>" class="profile_image">

                <form action="/api/profile/addprofilepic" method="POST" enctype="multipart/form-data"><input type="file" name="profileimage" id="profilepic_upload">
                <button type="submit" class="btn-sm">Upload</button>
                </form>

            </div>
            <div class="col-sm-7 col-md-8 order-sm-first" >

                <div class="row p-4"><h1><%=username%></h1></div>
                <form action="/api/profile/edit" method="POST">
                <ul class="personal_info_list">z
                    <li><pre>Name:          <input type="text" name="name" value="<%=name%>"></pre></li>
                    <li><pre>Contact:       <input type="text" name="contact" value="<%=contactno%>"></pre></li>
                    <li><pre>Address:       <input type="text" name="address" value="<%=address%>"></pre></li>
                    <li><pre>Last modified: <%=date%></pre></li>
                </ul>
                <div class="row p-3 m-3 mt-5">
                    <button class="btn-sm btn-primary mt-5 " style="width:fit-content;" type="submit">submit</button>
                    <!-- after submitting , redirect to profile page     -->
                </div>
            </form>
            <button class="btn-sm btn-primary" style="width:fit-content;margin-left:30px;margin-bottom: 10px;;" id="info_back_button" >Back</button>
            

            </div>
        </div>

        <!-- my novels column -->
        
        <div class="row mynovels_info mt-2 p-4">
            <div class="col-12 p-3"><h1>My Novels</h1></div>

            <div class="row"> 
                <div class="col-md-5 col-sm-3">
                    <button class="btn-sm btn-success" style="width: fit-content;" id="novel_add_button">Add</button>
                </div>

                <div class="col-md-7 col-sm-9">
                    <form action="/api/profile/removenovel" class="remove_novel_button">
                        <input type="text">
                        <button type="submit" class="btn-sm btn-danger" style="width: fit-content;">Remove</button>
                    </form>
                </div>

            </div>
        </div>

        <!-- edit my novels -->


        <div class="row mynovels_edit mt-2 p-4">
            <div class="col-12 p-3"><h1>My Novels</h1></div>

            <div class="row align-items-start" style="padding: -30px;"> 
                <div class="col-sm-5 col-md-4 order-sm-last mt-2">
                    <img src="<%=profilepic%>" class="novel_image">
                    <form action="/api/profile/addnovelpic" method="POST"><input type="file">
                    <button type="submit" class="btn-sm">Upload</button>
                    </form>
                </div>

                <div class="col-sm-7 col-md-8 order-sm-first mt-2" >
                    <form action="/api/profile/edit/add/novel" method="POST">
                    <ul class="novel_info_list">
                        <li><pre>Name:    <input type="text" name="name"></pre></li>
                        <li><pre>Author:  <input type="text" name="author"></pre></li>
                        <li><pre>Genre:   <input type="text" name="genre"></pre></li>
                        <li><pre>Details: <input type="text" name="details"></pre></li></pre></li>
                    </ul>
                    <div class="row p-3 m-3 mt-5">
                        <button class="btn-sm btn-success mt-5 " style="width:fit-content;" type="submit">Add</button>
                        <!-- after submitting , redirect to profile page     -->
                    </div>
                </form>
                <button class="btn-sm btn-danger" style="width:fit-content;margin-left:30px;margin-bottom: 10px;;" id="novel_back_button" >Cancel</button>
                </div>
            </div>
        </div>

        <!-- My Genre -->
        <div class="row"></div>

    </div>
    <script src="/scripts/profileScript.js"></script>
</body>
</html>